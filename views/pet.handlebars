
<div class="container">
  <form action="action_page.php">

    <label for="pname">Pet Name</label>
    <input type="text" id="pname" name="petname" placeholder="Pet name..">

    <label for="nname">Pet Nickname</label>
    <input type="text" id="nname" name="nickname" placeholder="Pet Nickname..">

    <label for="species">Species</label>
    <select id="species" name="species">
      <option value="australia">Dog</option>
      <option value="canada">Cat</option>
      <option value="usa">Bunny</option>
      <option value="usa">Rat</option>
      <option value="usa">Hamster</option>
      <option value="usa">Guinea Pig</option>
      <option value="usa">Turtle</option>
      <option value="usa">Bird</option>
      <option value="usa">Ferret</option>
    </select>

    <label for="nname">Pet Breed</label>
    <input type="text" id="breed" name="petbreed" placeholder="Breed..">

    <label for="nname">Zip Code</label>
    <input type="text" id="zip" name="zip" placeholder="Zip Code..">

    <label for="nname">Pet Birthdate</label>
    <input type="text" id="bdate" name="birthdate" placeholder="Pet Birthdate..">

    <label for="nname">Pet Weight</label>
    <input type="text" id="weight" name="petweight" placeholder="Pet Weight..">

    <label for="nname">Pet Allergies</label>
    <input type="text" id="allergies" name="allergies" placeholder="Pet Allergies..">

    <label for="nname">Pet Food</label>
    <input type="text" id="pfood" name="petfood" placeholder="Pet Food..">

    <label for="nname">Microchip ID</label>
    <input type="text" id="micro" name="microchip" placeholder="Microchip ID..">


    <input type="submit" value="Submit">

  </form>
</div>

{{#if pets.length}}
  <div class="col-md-6 project-list">
    <h3>Current Pets:</h3>

    {{#each pets as |pet|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/pet/{{pet.id}}">{{pet.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{pet.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/pet.js"></script>